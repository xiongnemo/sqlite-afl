CREATE TABLE t1(a, b, c);
CREATE INDEX i0 ON t1(a, b);
CREATE VIEW v1 AS SELECT * FROM t1;
CREATE VIEW v0 AS SELECT * FROM t1, v1
WHERE t1.c=v1.c GROUP BY t1.a ORDER BY v1.b;
CREATE TRIGGER t01 AFTER INSERT ON t1
WHEN n00.a0=0
BEGIN
DELETE FROM t0 WHERE a=0;
INSERT INTO t0 VALUES(0, 0, 0);
UPDATE t0 SET c=c+1;
END;
